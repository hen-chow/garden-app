<div class="container" id="sign-in">
  <div class="section">
    <div class="row">
    <%= form_tag login_path, method: :post, class: "col s12 center" do %>
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="input-field col s12 m4 l8">
          <i class="material-icons prefix">email</i>
          <input type="text" name="email" placeholder="Email" id="icon_email" />
        </div>
        <div class="col s12 m4 l2"></div>
      </div>
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="input-field col s12 m4 l8">
          <i class="material-icons prefix">vpn_key</i>
          <input type="password" placeholder="Password" id="icon_password" name="password" />
        </div>
        <div class="col s12 m4 l2"></div>
      </div>
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="input-field col s12 m4 l8">
          <input type="submit" value="Sign In" class="btn waves-effect waves-light green accent-3" />
        </div>
        <div class="col s12 m4 l2"></div>
      </div>
    <% end %>
    </div>
  </div>
</div>
