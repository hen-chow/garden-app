<div class="row">
  <form class="col s12">
    <div class="row">
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <input id="icon_prefix" type="text" class="validate">
        <label for="icon_prefix">First Name</label>
      </div>
      <div class="input-field col s6">
        <i class="material-icons prefix">email</i>
        <input id="icon_telephone" type="tel" class="validate">
        <label for="icon_telephone">Email</label>
      </div>
    </div>
  </form>
</div>

<div class="row">
  <%= form_for @user, html: {class: "col s12"} do |el| %>
    <div class="row">
      <div class="input-field col s4">
        <i class="material-icons prefix">account_circle</i>
        <%= el.text_field :name, placeholder: "Name", id: "icon_prefix" %>
      </div>
      <div class="input-field col s4">
        <i class="material-icons prefix">email</i>
        <%= el.text_field :email, placeholder: "Email", id: "icon_email" %>
      </div>
      <div class="input-field col s4">
        <i class="material-icons prefix">vpn_key</i>
        <%= el.text_field :password, placeholder: "Password", id: "icon_password" %>
      </div>
      <div>
        <%= el.submit "Sign Up", class: "btn waves-effect waves-dark" %>
      </div>
    </div>
  <% end %>
</div>
