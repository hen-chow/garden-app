<div class="container">
  <div class="section">
    <div class="row">
    <%= form_for @user, html: {class: "col s12 center"} do |el| %>
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="input-field col s12 m4 l8">
          <i class="material-icons prefix">account_circle</i>
          <%= el.text_field :name, placeholder: "Name", id: "icon_prefix" %>
        </div>
        <div class="col s12 m4 l2"></div>
      </div>
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="input-field col s12 m4 l8">
          <i class="material-icons prefix">email</i>
          <%= el.text_field :email, placeholder: "Email", id: "icon_email" %>
        </div>
        <div class="col s12 m4 l2"></div>
      </div>
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="input-field col s12 m4 l8">
          <i class="material-icons prefix">vpn_key</i>
          <%= el.text_field :password, placeholder: "Password", id: "icon_password" %>
        </div>
        <div class="col s12 m4 l2"></div>
      </div>
      <div class="row">
        <div class="col s12 m4 l2"></div>
        <div class="input-field col s12 m4 l8">
          <%= el.submit "Sign Up", class: "btn waves-effect waves-light green accent-3" %>
        </div>
        <div class="col s12 m4 l2"></div>
      </div>
    <% end %>
    </div>
  </div>
</div>
